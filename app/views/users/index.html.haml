%h1 Students
= link_to 'New Student', new_user_path, class: 'btn btn-primary'
%table.table.table-bordered.table-hover
  %thead.thead-dark
    %tr
      %th Name
      %th Surname
      %th Email
      %th{:colspan => "3"}
  %tbody
    -if @users.present?
      - @users.each do |user|
        %tr
          %td= user.name
          %td= user.surname
          %td= user.email
          %td= link_to 'Show', show_user_path(user)
          %td= link_to 'Edit', edit_user_path(user)
          %td= link_to 'Destroy', delete_user_path(user), method: :delete, data: { confirm: 'Are you sure?' }
    -else
      %tr
%br/
